<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip" >
    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="3dip"
                  android:layout_alignParentLeft="true"
                  android:layout_marginRight="5dip">

        <ImageView
                android:id="@+id/icon"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:scaleType="centerCrop"/>
    </LinearLayout>

    <!-- Label-->
    <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Rihanna Love the way lie"
            android:textColor="#595648"
            android:typeface="sans"
            android:textSize="15dip"
            android:textStyle="bold"/>

    <!-- Rightend Duration -->
    <TextView
            android:id="@+id/isLaunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="no"
            android:layout_marginRight="10dip"
            android:textSize="12dip"
            android:textColor="#10bcc9"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/isLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_star"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    <TextView
            android:id="@+id/countLaunch"
            android:layout_marginTop="47dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="0"
            android:layout_marginRight="13dip"
            android:textSize="12dip"
            android:textColor="#10bcc9"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internet; Brother; Wthaer; Mail; Goole; sadfqwer; Internet; Brother; Wthaer; Mail; Goole; sadfqwer;"
            android:id="@+id/tags"
            android:layout_toRightOf="@+id/thumbnail"
            android:textColor="#ff6a00"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold"
            android:layout_below="@+id/label"
            android:layout_toLeftOf="@+id/isLike"
            android:layout_alignBottom="@+id/thumbnail"/>

</RelativeLayout>